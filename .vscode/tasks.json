{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "g++-14",
            "args": [
                "-std=c++23",
                "-I${workspaceFolder}/include",
                "-g",
                "${workspaceFolder}/source/**.cpp",
                "-o",
                "${workspaceFolder}/bin/app"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Vom Debugger generierte Aufgabe."
        }
    ],
    "version": "2.0.0"
}